            height: 100vh;
        }
        #philAveMask {
            background: linear-gradient(270deg, #000000 3.65%, rgba(255, 255, 255, 0) 100%);
        }
        /* Height for devices larger than 576px */
        @@media (min-width: 992px) {
            #intro {
                margin-top: -58.59px;
            }
            #singleUse {
                margin-top: -58.59px;
            }
            #co2Emission {
                margin-top: -58.59px
            }
            #philAve {
                margin-top: -58.59px
            }
            #c02 {
                max-width: 100%;
                height: 100vh;
                object-fit: cover;
            }
            table {
                height: 100vh;
            }
        }
        @@media (max-width: 992px) {
            #philAvePic {
                height: 50vh;
            }
            table {
                height: 50vh;
            }
            #c02 {
                max-width: 100%;
                height: 50vh;
            }
            #philAveMask {
                background: linear-gradient(0deg, #000000 3.65%, rgba(255, 255, 255, 0) 100%);
            }
        }
        .navbar .nav-link {
            color: #fff !important;
        }
    </style>
}
