@section Styles
{
    <style>
        #intro {
            background-image: url(@Url.Content("~/images/brian-yurasits-y8k-dMPNWNI-unsplash.jpg"));
            height: 100vh;
        }

        #singleUse {
            background-image: url(@Url.Content("~/images/brian-yurasits-jVXgfjSDnJI-unsplash.jpg"));
